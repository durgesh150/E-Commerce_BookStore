@page
@using Microsoft.AspNetCore.Mvc.Localization
@using ProductManagement.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using ProductManagement.Web.Pages.Addresses
@using ProductManagement.Addresses;
@using System.Globalization
@inject IHtmlLocalizer<ProductManagementResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Addresses/CreateModal" autocomplete="off">
    <abp-modal id="AddressCreateModal">
        <abp-modal-header title="@L["NewAddress"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="Address.CIty"  />

            <abp-input asp-for="Address.State"  />

            <abp-input asp-for="Address.PostalCode"  />

            <abp-select asp-for="Address.Country"  />

            <abp-input asp-for="Address.UserId"  />

            <abp-input asp-for="Address.StreetAddress" text-area />

                    
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>