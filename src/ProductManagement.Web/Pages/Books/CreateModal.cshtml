@page
@using Microsoft.AspNetCore.Mvc.Localization
@using ProductManagement.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using ProductManagement.Web.Pages.Books
@using ProductManagement.Books;
@using System.Globalization
@inject IHtmlLocalizer<ProductManagementResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Books/CreateModal" autocomplete="off">
    <abp-modal id="BookCreateModal">
        <abp-modal-header title="@L["NewBook"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="Book.Title"  />

            <abp-input asp-for="Book.Price"  data-val="false"/>

            <abp-input asp-for="Book.Description" text-area />

                                <abp-select asp-for="Book.AuthorId" asp-items="Model.AuthorLookupListRequired" label="@L["Author"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>