@page
@using Microsoft.AspNetCore.Mvc.Localization
@using ProductManagement.Localization
@using ProductManagement.Web.Pages.Books
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using ProductManagement.Books;
@using System.Globalization
@inject IHtmlLocalizer<ProductManagementResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Books/EditModal" autocomplete="off">
    <abp-modal id="BookEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="Book.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="Book.Title"  />

            <abp-input asp-for="Book.Price"  data-val="false"/>

            <abp-input asp-for="Book.Description" text-area />

                                <abp-select asp-for="Book.AuthorId" asp-items="Model.AuthorLookupListRequired" label="@L["Author"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>